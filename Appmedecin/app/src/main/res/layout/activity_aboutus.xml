<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="À propos de nous"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="8sp"
        android:src="@drawable/img_5" />

    <TextView
        android:id="@+id/introductionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue sur notre application de gestion des médecins. Notre objectif est de fournir une plateforme conviviale pour gérer les informations des médecins dans une base de données centralisée."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- But Général -->
    <TextView
        android:id="@+id/goalTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="But Général"
        android:textSize="24sp"
        android:layout_below="@id/introductionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/goalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faciliter la gestion des données médicales des médecins pour les professionnels de la santé et les patients."
        android:layout_below="@id/goalTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Fonctionnement -->
    <TextView
        android:id="@+id/operationTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fonctionnement"
        android:textSize="24sp"
        android:layout_below="@id/goalTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/operationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permet aux utilisateurs de gérer les médecins (ajouter, modifier, rechercher, supprimer) dans une base de données sécurisée."
        android:layout_below="@id/operationTitleTextView"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"/>
    <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Page d'acceuil"
        android:layout_below="@id/messageEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</LinearLayout>
