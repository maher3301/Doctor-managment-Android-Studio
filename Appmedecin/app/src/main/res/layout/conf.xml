<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réglementation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginTop="30sp"
        android:text="Acceptation des Conditions :\nEn utilisant cette application, vous acceptez les conditions d'utilisation énoncées, engageant ainsi votre conformité avec ces termes.\n\nResponsabilité de l'Utilisateur :\nLes utilisateurs sont tenus de maintenir la confidentialité de leurs identifiants de connexion et de signaler toute utilisation non autorisée.\n"
        android:textAlignment="viewStart"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/img" />
    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="page d'acceuil" />


</LinearLayout>